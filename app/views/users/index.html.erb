<h1 align="center">Mixed Messages Users</h1>
<div align="center">
	<%= will_paginate %>
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					
					<li class="article-title">
						<%= link_to user.username, user_path(user) %>
					</li>
					<li>
						
					</li>
					<% if logged_in? && current_user.admin && !user.admin %>
						<li>
							<button class="btn btn-xs btn-info">
								<%= link_to "Make Administrator", make_admin_path(user), method: :patch, remote: :true,
									data: {confirm: "Are you sure you want to make this user an Administrator?" } %>
							</button>
							<button class="btn btn-xs btn-warning">
								<%= link_to "Ban User", ban_path(user), method: :patch, remote: :true, data: {confirm: "Are you sure you want to ban this user?"} %>
							</button>
							<button class="btn btn-xs btn-danger">
								<%= link_to "Delete User", user_path(user), method: :delete,
									data: {confirm: "Are you sure you want to delete this user?" } %>
							</button>
						</li>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>
	<%= will_paginate %>

</div>