<h3 align="center">Users that allow emails</h3>
<h4 align="center"><%= pluralize(@users.count, "User").upcase %></h4>
<% if @users.count > 100 %>
	<h1>You need to talk to Devjem before sending any emails</h1>
<% end %>
<div class="container">
	<div class="row">
		<div align="center">
			<%# will_paginate @users %>
			<% @users.each do |user| %>
				<ul class="user">
					<div class="well col-md-4">
						<li>
							<%=  user.email.upcase %>
						</li>
					</div>
				</ul>
			<% end %>
		</div>
	</div>
	<div align="center">
		<%= will_paginate @users %>
	</div>

	<%= form_for(:send_email, url: send_email_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
			<div class="control-label col-md-2">
				<% f.label :subject %>
			</div>
			<div class="col-md-8">
				<%= f.text_field :subject, class: "form-control", placeholder: "Subject", autocomplete: false %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-md-2">
				<% f.label :content %>
			</div>
			<div class="col-md-8">
				<%= f.cktext_area :content, rows: 10, class: "form-control", placeholder: "Your Comment", autocomplete: false %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-2 col-md-offset-2">
				<%= f.submit "Send Email", class: "btn btn-primary btn-lg" %>
			</div>
		</div>
	<% end %>
</div>