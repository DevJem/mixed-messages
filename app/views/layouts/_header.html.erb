

<header id="head" >
	<div class="row">
		<div id="mm" class="col-md-3" align="right">
			<%= link_to image_tag("mm-header.png", alt: "Mixed Messages Logo"), root_path %>
		</div>
		<%# render 'layouts/navigation' %>
		<nav id="top-link-bar" class="navbar col-md-8">
			<ul class="nav nav-justified">
        <% if logged_in? %>
          <li>
        		<a href="<%= user_path(current_user) %>">
        			<%= current_user.username %>
        		<% if current_user.notifications.count > 0 %>
        			<span class="badge"><%= current_user.notifications.count %></span>
        		<% end %>
        		</a>
          </li><li>|</li>
        <% else %>
        	<li > </li><li></li>
        <% end %>

				<li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"  aria-haspopup="true" aria-expanded="false">Watch Now<span class="caret"></span></a>
          <ul class="dropdown-menu">
          	<% if logged_in? %>
          		<li><%= link_to "Premium Content", premium_path %></li>
          		<li role="separator" class="divider"></li>
          	<% end %>
	          <li><%= link_to "Our Episodes", watch_path %></li>
          	<li role="separator" class="divider"></li>
            <li><%= link_to "User Submissions", uploads_path %></li>
          </ul>
        </li><li>|</li>

			 	<li><%= link_to "Blogs", blogs_path %> </li><li>|</li>
				<li><%= link_to "Get Involved", submit_path %></li><li>|</li>

				<li><%= link_to "Get Gear", "#" %></li><li>|</li>
				<% if !logged_in? %>
					<li class="br"><%= link_to "Log In", login_path %></li>
				<% else %>
					<li class="br"><%= link_to "Log Out", logout_path, method: :delete %></li>
				<% end %>
				<% if logged_in? && current_user.admin %><li>|</li>
					<li class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown"  aria-haspopup="true" aria-expanded="false">Admin Tools<span class="caret"></span></a>
	          <ul class="dropdown-menu">
	            <li><%= link_to "All Users", users_path %></li>
          		<li role="separator" class="divider"></li>
	            <li><%= link_to "Email list", elist_path %></li>
          		<li role="separator" class="divider"></li>
	            <li><%= link_to "Set Premium Video", new_video_path %></li>
          		<li role="separator" class="divider"></li>
          		<li><%= link_to "Create Blog Post", new_blog_path %></li>
          		<li role="separator" class="divider"></li>
	            <li>
		        		<a href="<%= review_path %>">
		        			Review List
		        			<% if Upload.where(save_upload: false).count > 0 %>
		        				<span class="badge"><%= Upload.where(save_upload: false).count %></span>
		        		<% end %>
		        		</a>
		          </li>
	          </ul>
	        </li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>
<!-- ********************************End of Header********************************** -->