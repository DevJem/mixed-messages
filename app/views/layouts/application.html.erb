</head>
<body>
	<div id='page'>
  	<%= render 'layouts/header' %>
    <%= render 'layouts/messages' %>

    <% if logged_in? and current_user.require_password_reset? %>
      <%= render 'pages/pw_change_form' %>
    <% elsif logged_in? and current_user.banned? %>
      <%= render 'layouts/banned' %>
    <% else %>
      <%= yield %>
    <% end %>
    <% debug(params) if Rails.env.development? %>
    <%= render 'layouts/footer' %>

	</div>
</body>
</html>

