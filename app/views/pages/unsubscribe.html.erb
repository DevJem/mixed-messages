<div class="container">
	<div class="row good-background">
		<div align="center">
			<h1 class="section-title">Unsubscribe!</h1>
		</div>
		<%= form_for(:unsubscribe, url: remove_email_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
				<div class="form-group">
					<div class="control-label row">
						<div align="left" class="col-sm-6 col-sm-offset-2">
							<%= f.label "Please enter the email address you'd like removed." %>
						</div>
					</div>
					<div class="col-sm-6 col-sm-offset-2">
							<%= f.email_field :email, class: "form-control", autofocus: true %>
					</div>
				</div>
				<div class="col-sm-offset-2 move-bottom">
					<%= f.submit("Unsubscribe", class: "btn btn-primary btn-lg") %>
				</div>
		<% end %>
	</div>
</div>

