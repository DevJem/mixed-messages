<div class="blog-fix">
	<div class="row">
		<div class="col-sm-4">
			<p>
			</p>
		</div>

		<div class="col-sm-5 col-sm-offset-1 move-bottom">
			<div align="center" class="fix-link">
				<% if !logged_in? %>
					<h1 class="fix-link"><strong><%= link_to "LOG IN TO SEND US AN EMAIL!", login_path %></strong></h1><br/><h4>Or just email us at <%= link_to "producers@mixed-messages.org", "mailto:producers@mixed-messages.org" %></h4>
					<% else %>
						<h1 class="fix-link">Send us a message!</h1><br/><h4>Or just email us at <%= link_to "producers@mixed-messages.org", "mailto:producers@mixed-messages.org" %></h4><br/>
				</div>
				<%= form_for(:contact, :html => {class: "form-horizontal", role: "form"}) do |f| %>
					<div class="form-group">
						<div class="control-label col-md-2">
							<% f.label :title %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :title, class: "form-control", placeholder: "Title", autocomplete: false %>
						</div>
					</div>
					<div class="form-group">
						<div class="control-label col-md-2">
							<% f.label :content %>
						</div>
						<div class="col-md-8">
							<%= f.text_area :content, rows: 6, class: "form-control", placeholder: "Your Comment", autocomplete: false %>
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-2 col-md-offset-2">
							<%= f.submit "Send Email", class: "btn btn-primary btn-lg" %>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
