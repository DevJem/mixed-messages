<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<div align="center">
				<% if !logged_in? %>
					<h3 class="fix-link"><strong><%= link_to "LOG IN TO SEND US AN EMAIL!", login_path %></strong></h3><br/>Or just email us at <%= link_to "producers@mixed-messages.org", "mailto:producers@mixed-messages.org" %>
				<% else %>
					<h3>Add Your Comment</h3>
			</div>
			<%= form_for(:contact, :html => {class: "form-horizontal", role: "form"}) do |f| %>
				<div class="form-group">
					<div class="control-label col-md-2">
						<% f.label :title %>
					</div>
					<div class="col-md-8">
						<%= f.text_field :title, class: "form-control", placeholder: "Title", autocomplete: false %>
					</div>
				</div>
				<div class="form-group">
					<div class="control-label col-md-2">
						<% f.label :content %>
					</div>
					<div class="col-md-8">
						<%= f.text_area :content, rows: 6, class: "form-control", placeholder: "Your Comment", autocomplete: false %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-2 col-md-offset-2">
						<%= f.submit "Send Email", class: "btn btn-primary btn-lg" %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>