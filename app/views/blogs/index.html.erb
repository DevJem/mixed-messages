<div align="center">
	<%= will_paginate %>
</div>


<div class="row">
	<div class="col-xs-5 col-xs-offset-2">
		<% @blogs.each do |blog| %>
			<div class="blog-title"><h2>
				<%= link_to blog.title, blog_path(blog) %></h2>
			</div>
			<div class="blog-body">
				<%= truncate(blog.content, length: 900) %>
				<div class="blog-meta-details">
					<small>Created By: <%= blog.user.username if blog.user %>,
						<%= time_ago_in_words(blog.created_at) %> ago,
						Last updated: <%= time_ago_in_words(blog.updated_at) %> ago.
					</small>
				</div>
			</div>
			<div class="blog-actions">
				<%= link_to "Edit this blog", edit_blog_path(blog),
						class: "btn btn-xs btn-primary" %>
				<%= link_to "Delete this blog", blog_path(blog),
						method: :delete, data: {confirm: "Are you sure you want to delete this blog?"}, class: "btn btn-xs btn-danger" %>
			</div>
		<% end %>
	</div>
	<div class="col-sm-3">
		<div class="about-ads">
			<p>Ad Unit 1</p>
		</div>
		<div class="about-ads">
			<p>Ad Unit 2</p>
		</div>
		<div class="about-ads">
			<p>Ad Unit 3</p>
		</div>
	</div>
</div>


	
<div align="center">
	<%= will_paginate %>
</div>
