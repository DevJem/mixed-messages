 
<%= render 'layouts/errors', obj: @blog %>
<div class="container">
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@blog, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
			<div class="control-label col-sm-1">
				
					<%= f.label :title %>
			</div>
			<div class="col-sm-12">
					<%= f.text_field :title, class: "form-control", placeholder: "Title of blog", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-sm-1">
				<%= f.label :content %>
			</div>
			<div class="col-sm-12">
				<%= f.cktext_area :content, ckeditor: {height: 550}, class: "form-control", placeholder: "Body of blog" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit class: "btn btn-primary btn-lg" %>
			</div>
		</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			<div align="center">
				<h4 class="fix-link">[ <%= link_to "Cancel and return to Blogs.", blogs_path %> ]</h4>
			</div>
		</div>
	</div>
</div>
</div>